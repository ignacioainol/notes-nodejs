<div class="row">
	<div class="col-md-4 mx-auto">
		<div class="card">
			<div class="card-header">
				Account Register
			</div>
			<div class="card-body">
				<form action="/users/signup" method="post">
					<div class="form-group">
						<input type="text" name="name" value="{{name}}" class="form-control" placeholder="Name">
					</div>

					<div class="form-group">
						<input type="email" value="{{email}}" name="email" class="form-control" placeholder="Email">
					</div>

					<div class="form-group">
						<input type="password" name="password" class="form-control" placeholder="Password">
					</div>

					<div class="form-group">
						<input type="password" name="confirm_password" class="form-control" placeholder="Password">
					</div>

					<div class="form-group">
						<button class="btn btn-success btn-block" type="submit">
							SignUp
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>